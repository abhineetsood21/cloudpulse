# ── Docker Compose defaults (override as needed) ──────────────────
POSTGRES_PASSWORD=changeme

# ── Database ──────────────────────────────────────────────────────
# Used by the API container; Docker Compose wires this automatically.
DATABASE_URL=postgresql+asyncpg://cloudpulse:changeme@postgres:5432/cloudpulse

# ── Security ──────────────────────────────────────────────────────
APP_SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-me-jwt-secret

# ── AWS (for STS AssumeRole into customer accounts) ───────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ── Optional: Email Alerts (SendGrid) ─────────────────────────────
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@cloudpulse.io

# ── Optional: Payments (Stripe) ───────────────────────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ── Optional: Webhooks ────────────────────────────────────────────
# CloudPulse will POST events (anomaly.detected, sync.completed, etc.)
# to these URLs if configured.
WEBHOOK_URL=
WEBHOOK_SECRET=

# ── App Settings ──────────────────────────────────────────────────
APP_ENV=development
APP_URL=http://localhost:8000

# ── Alert Thresholds ──────────────────────────────────────────────
ANOMALY_THRESHOLD_INFO=0.25
ANOMALY_THRESHOLD_WARNING=0.50
ANOMALY_THRESHOLD_CRITICAL=1.00
